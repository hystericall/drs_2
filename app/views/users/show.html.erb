<% provide :title, @user.name %>
<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
      <aside class="col-md-4">
        <section class="user_info">
          <h1>
            <%= gravatar_for @user %>
            <%= @user.name %>
          </h1>
          <span><%= link_to t(".view"), info_user_path %></span>
        </section>
        <section class="stats">
          <%= render "shared/stats" %>
        </section>
        <section class="stats">
          <%= render "shared/stats" %>
        </section>
      </aside>
      <div class="col-md-8">
        <%= render "follow_form" if logged_in? %>
        <% if @user.requests.any? %>
          <h3><%= t(".request", size: @user.requests.size) %></h3>
          <ol class="requests">
            <%= render @requests %>
          </ol>
          <%= will_paginate @requests %>
        <% end %>
      </div>
    </div>
  </div>
</div>
