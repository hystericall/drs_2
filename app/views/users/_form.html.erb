<%= form_for @user do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <%= f.label t "name" %>
  <%= f.text_field :name, class: "form-control" %>

  <%= f.label t "email" %>
  <%= f.email_field :email, class: "form-control" %>

  <%= f.label t "skill" %>
  <%= f.text_field :skill, class: "form-control" %>

  <%= f.label t "user_code" %>
  <%= f.text_field :user_code, class: "form-control" %>

  <% unless user_exists? @user %>
    <%= f.label t "division" %>
    <%= f.collection_select :division_id, @division, :id, :name, {prompt: true}, {class: "form-control"} %>

    <%= f.label t "position" %>
    <%= f.collection_select :position_id, @position, :id, :name, {prompt: true}, {class: "form-control"} %>
  <% end %>
  <%= f.label t "password" %>
  <%= f.password_field :password, class: "form-control" %>

  <%= f.label t "password_confirmation"%>
  <%= f.password_field :password_confirmation, class: "form-control" %>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
