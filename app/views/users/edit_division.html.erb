<% provide :title, t(".title") %>
<% provide :button_text, t(".submit") %>
<h1><%= t ".header" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user do |f| %>
      <%= f.label t "division" %>
      <%= f.collection_select :division_id, @division, :id, :name, {prompt: true}, {class: "form-control"} %>
      <%= f.submit yield(:button_text), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
